generator client {
  provider = "prisma-client-js" // <--- Add "-js" here!
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}

// --- ENUMS ---
enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  DELIVERED
  CANCELLED
}

// --- MODELS ---

// 1. Category (NEW TABLE)
// Essential for organizing the shop (e.g., "Shoes", "Summer Collection")
model Category {
  id       String    @id @default(cuid())
  name     String
  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// 2. Product (UPDATED)
model Product {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?  @db.Text
  price       Decimal  @db.Decimal(10, 2)
  stock       Int      @default(0)
  images      String[]

  // New: Categorization & Promotion
  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])
  isFeatured Boolean   @default(false) // For Homepage Carousel
  isArchived Boolean   @default(false)

  orderItems OrderItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([categoryId])
  @@index([name])
  @@index([isFeatured])
}

// 3. Order (UPDATED)
model Order {
  id String @id @default(cuid())

  // Financials
  total  Decimal     @db.Decimal(10, 2)
  status OrderStatus @default(PENDING)
  isPaid Boolean     @default(false)

  // New: Logistics & Verification
  // We store phone/address directly here to "freeze" the info at purchase time.
  phone     String  @default("")
  address   String  @default("")
  paymentId String? // e.g., Stripe Payment Intent ID

  // Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Restrict)
  userId String

  items OrderItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

// 4. OrderItem (UNCHANGED)
model OrderItem {
  id       String  @id @default(cuid())
  quantity Int
  price    Decimal @db.Decimal(10, 2)

  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId String

  product   Product @relation(fields: [productId], references: [id], onDelete: Restrict)
  productId String

  @@index([orderId])
  @@index([productId])
}

// 5. User (UPDATED FOR NEXTAUTH)
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String? // Google Profile Picture
  password      String?
  role          Role      @default(USER)

  accounts Account[] // Link to Google/Discord
  sessions Session[]
  orders   Order[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}

// 6. Account (NEW TABLE - REQUIRED FOR NEXTAUTH)
// This stores the Google/Discord specific tokens
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

// 7. Session (NEW TABLE - REQUIRED FOR NEXTAUTH)
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
